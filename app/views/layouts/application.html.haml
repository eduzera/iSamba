%html{html_attrs}
	%head
		%meta{:content => "iSamba. Grupo de samba e pagode de São paulo. Entre em contato: contato@grupoisamba.com.br para show. Tocamos:(Exaltasamba, Revelação, Zeca Pagodinho, Turma do Pagode, Molejo, Samprazer, Fundo de Quinta, Dudu Nobre, Art Popular, Pixote entre outros.)", :name => "description"}/
		%title
			= h(yield(:title) || "Grupo iSamba | Samba e Pagode")
		%meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
		= stylesheet_link_tag "reset", "text", "grid","front"
		= javascript_include_tag :defaults
		= yield(:head)
		
		:javascript
			var _gaq = _gaq || [];
			_gaq.push(['_setAccount', 'UA-19320209-1']);
			_gaq.push(['_trackPageview']);

			(function() {
				var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
				ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
				var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			})();

	%body
		.container_16

			= render :partial => "layouts/header"

			#content
				= yield

			= render :partial => "layouts/footer"

